<!-- Contact Section -->
<section id="contact" class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-6">
        <!-- Header -->
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">Let's Connect</h2>
            <p class="text-gray-600 dark:text-gray-400 text-lg max-w-2xl mx-auto">Ready to discuss opportunities or just want to say hello?</p>
        </div>
        
        <!-- Contact Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            <!-- Email -->
            <div class="bg-gradient-to-br from-purple-50 to-blue-50 dark:from-purple-900/20 dark:to-blue-900/20 rounded-2xl p-8 border border-purple-100 dark:border-purple-800 hover:shadow-xl transition-all duration-300 group">
                <div class="flex items-center space-x-4 mb-6">
                    <div class="w-12 h-12 gradient-bg rounded-xl flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <i class="fas fa-envelope text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-gray-100">Email</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Let's start a conversation</p>
                    </div>
                </div>
                <a href="mailto:{{ personal.email }}" class="contact-link text-purple-600 dark:text-purple-400 font-medium hover:text-purple-700 dark:hover:text-purple-300 transition-colors duration-300">
                    {{ personal.email }}
                </a>
            </div>
            
            <!-- Location -->
            <div class="bg-gradient-to-br from-green-50 to-blue-50 dark:from-green-900/20 dark:to-blue-900/20 rounded-2xl p-8 border border-green-100 dark:border-green-800 hover:shadow-xl transition-all duration-300 group">
                <div class="flex items-center space-x-4 mb-6">
                    <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <i class="fas fa-map-marker-alt text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-gray-100">Location</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Based in</p>
                    </div>
                </div>
                <p class="text-gray-700 dark:text-gray-300 font-medium">{{ personal.location }}</p>
            </div>
            
            <!-- Phone -->
            <div class="bg-gradient-to-br from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-2xl p-8 border border-blue-100 dark:border-blue-800 hover:shadow-xl transition-all duration-300 group">
                <div class="flex items-center space-x-4 mb-6">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <i class="fas fa-phone text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-gray-100">Phone</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Call me anytime</p>
                    </div>
                </div>
                <a href="tel:{{ personal.phone }}" class="contact-link text-blue-600 dark:text-blue-400 font-medium hover:text-blue-700 dark:hover:text-blue-300 transition-colors duration-300">
                    {{ personal.phone }}
                </a>
            </div>
            
            <!-- LinkedIn -->
            <div class="bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-2xl p-8 border border-indigo-100 dark:border-indigo-800 hover:shadow-xl transition-all duration-300 group">
                <div class="flex items-center space-x-4 mb-6">
                    <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <i class="fab fa-linkedin text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-gray-100">LinkedIn</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Professional network</p>
                    </div>
                </div>
                <a href="{{ personal.linkedin }}" target="_blank" rel="noopener noreferrer" class="contact-link text-indigo-600 dark:text-indigo-400 font-medium hover:text-indigo-700 dark:hover:text-indigo-300 transition-colors duration-300">
                    Connect on LinkedIn
                </a>
            </div>
            
            <!-- GitHub (if available) -->
            {% if personal.github %}
            <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700 rounded-2xl p-8 border border-gray-200 dark:border-gray-600 hover:shadow-xl transition-all duration-300 group">
                <div class="flex items-center space-x-4 mb-6">
                    <div class="w-12 h-12 bg-gradient-to-br from-gray-600 to-gray-700 rounded-xl flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <i class="fab fa-github text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-gray-100">GitHub</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Code & projects</p>
                    </div>
                </div>
                <a href="{{ personal.github }}" target="_blank" rel="noopener noreferrer" class="contact-link text-gray-700 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-gray-100 transition-colors duration-300">
                    View Projects
                </a>
            </div>
            {% endif %}
            
            <!-- Website -->
            <div class="bg-gradient-to-br from-orange-50 to-red-50 dark:from-orange-900/20 dark:to-red-900/20 rounded-2xl p-8 border border-orange-100 dark:border-orange-800 hover:shadow-xl transition-all duration-300 group">
                <div class="flex items-center space-x-4 mb-6">
                    <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                        <i class="fas fa-globe text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-gray-100">Website</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">More about me</p>
                    </div>
                </div>
                <a href="{{ personal.webpage }}" target="_blank" rel="noopener noreferrer" class="contact-link text-orange-600 dark:text-orange-400 font-medium hover:text-orange-700 dark:hover:text-orange-300 transition-colors duration-300">
                    Visit Website
                </a>
            </div>
        </div>
        
        <!-- Quick Contact CTA -->
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-2xl p-8 md:p-12 text-white text-center relative overflow-hidden">
            <!-- Background Pattern -->
            <div class="absolute inset-0 opacity-10">
                <div class="absolute top-0 left-0 w-32 h-32 bg-white rounded-full -translate-x-16 -translate-y-16"></div>
                <div class="absolute bottom-0 right-0 w-24 h-24 bg-white rounded-full translate-x-12 translate-y-12"></div>
            </div>
            
            <div class="relative z-10">
                <h3 class="text-2xl md:text-3xl font-bold mb-4">Ready to work together?</h3>
                <p class="text-purple-100 mb-8 text-lg max-w-2xl mx-auto">Let's discuss how I can help bring your ideas to life and create innovative solutions together</p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="mailto:{{ personal.email }}" class="inline-flex items-center px-8 py-3 bg-white text-purple-600 font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
                        <i class="fas fa-paper-plane mr-3"></i>
                        Send Message
                    </a>
                    <a href="{{ personal.linkedin }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-8 py-3 bg-purple-700 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
                        <i class="fab fa-linkedin mr-3"></i>
                        Connect on LinkedIn
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
