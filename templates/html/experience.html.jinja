<!-- Experience Section -->
<section id="work" class="py-20 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
    <div class="max-w-6xl mx-auto px-6">
        <!-- Header -->
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">Professional Experience</h2>
            <p class="text-gray-600 dark:text-gray-400 text-lg max-w-2xl mx-auto">A journey through impactful roles in fintech and data science</p>
        </div>
        
        <!-- Search and Filter Component -->
        {% include 'search.html.jinja' %}
        
        <!-- Experience Timeline -->
        <div class="relative">
            <!-- Timeline Line -->
            <div class="absolute left-8 md:left-1/2 transform md:-translate-x-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-purple-600 to-blue-600 rounded-full"></div>
            
            <!-- Experience Items -->
            <div class="space-y-12">
                {% for job in experiences %}
                <div class="experience-card relative flex items-start space-x-8 group">
                    <!-- Timeline Dot -->
                    <div class="absolute left-6 md:left-1/2 transform md:-translate-x-1/2 w-4 h-4 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full border-4 border-white dark:border-gray-800 shadow-lg z-10"></div>
                    
                    <!-- Content Card -->
                    <div class="ml-16 md:ml-0 md:w-1/2 {% if loop.index0 % 2 == 0 %}md:mr-auto md:pr-8{% else %}md:ml-auto md:pl-8{% endif %}">
                        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-gray-700">
                            <!-- Job Header -->
                            <div class="flex justify-between items-start mb-6">
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-2">{{ job.role }}</h3>
                                    <p class="text-purple-600 dark:text-purple-400 font-semibold text-lg">{{ job.company }}</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-gray-600 dark:text-gray-400 text-sm">{{ job.duration }}</p>
                                </div>
                            </div>
                            
                            <!-- Job Description -->
                            <p class="text-gray-700 dark:text-gray-300 mb-6">Leading development of scalable systems and innovative solutions in fintech and data science.</p>
                            
                            <!-- Expandable Details -->
                            {% if job.responsibilities %}
                            <button onclick="toggleExperience({{ loop.index0 }})" class="w-full flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-600 transition-all duration-300 group">
                                <span class="font-medium text-gray-700 dark:text-gray-300">View Details</span>
                                <i class="fas fa-chevron-down expand-button text-gray-500 dark:text-gray-400 transition-transform duration-300"></i>
                            </button>
                            
                            <!-- Hidden Details -->
                            <div id="experience-{{ loop.index0 }}" class="experience-details mt-4 space-y-4">
                                {% for responsibility in job.responsibilities %}
                                <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4">
                                    <div class="flex items-start space-x-3">
                                        <div class="w-2 h-2 bg-purple-600 rounded-full mt-2 flex-shrink-0"></div>
                                        <div>
                                            <h4 class="font-medium text-gray-900 dark:text-gray-100 mb-1">{{ responsibility.title }}</h4>
                                            <p class="text-gray-700 dark:text-gray-300 text-sm">{{ responsibility.description }}</p>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                                
                                <!-- Skills Used -->
                                <div class="bg-gray-50 dark:bg-gray-700 rounded-xl p-4">
                                    <h4 class="font-medium text-gray-900 dark:text-gray-100 mb-3">Technologies & Skills</h4>
                                    <div class="flex flex-wrap gap-2">
                                        <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 rounded-full text-sm font-medium">Python</span>
                                        <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 rounded-full text-sm font-medium">SQL</span>
                                        <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 rounded-full text-sm font-medium">Kubernetes</span>
                                        <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 rounded-full text-sm font-medium">ML</span>
                                        <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 rounded-full text-sm font-medium">DevOps</span>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        
        <!-- Call to Action -->
        <div class="text-center mt-16">
            <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-2xl p-8 text-white">
                <h3 class="text-2xl font-bold mb-4">Ready to Collaborate?</h3>
                <p class="text-purple-100 mb-6">Let's discuss how my experience can benefit your next project</p>
                <a href="#contact" class="inline-flex items-center px-8 py-3 bg-white text-purple-600 font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
                    <i class="fas fa-paper-plane mr-3"></i>
                    Get in Touch
                </a>
            </div>
        </div>
    </div>
</section>
