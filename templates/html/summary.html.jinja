<!-- Hero Section -->
<section id="about" class="relative overflow-hidden">
    <!-- Background -->
    <div class="hero-gradient absolute inset-0"></div>
    <div class="absolute inset-0 bg-black/10"></div>
    
    <!-- Content -->
    <div class="relative max-w-6xl mx-auto px-6 py-20 md:py-32">
        <div class="text-center text-white">
            <!-- Greeting -->
            <div class="mb-6 fade-in">
                <span class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-medium border border-white/30">
                    ðŸ‘‹ Hello, I'm
                </span>
            </div>
            
            <!-- Name -->
            <h1 class="text-5xl md:text-7xl font-bold mb-6 fade-in" style="animation-delay: 0.2s;">
                {{ personal.name }}
            </h1>
            
            <!-- Title -->
            <div class="mb-8 fade-in" style="animation-delay: 0.4s;">
                <h2 class="text-2xl md:text-3xl font-light mb-4 opacity-90">
                    Backend Engineer
                </h2>
                <div class="flex flex-wrap justify-center gap-2 text-sm">
                    <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full">Scalable Systems</span>
                    <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full">ML/Data</span>
                    <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full">Fintech</span>
                </div>
            </div>
            
            <!-- Summary -->
            <p class="text-xl md:text-2xl font-light max-w-4xl mx-auto leading-relaxed opacity-90 fade-in" style="animation-delay: 0.6s;">
                {{ summary.text }}
            </p>
            
            <!-- CTA Buttons -->
            <div class="mt-12 flex flex-col sm:flex-row gap-4 justify-center fade-in" style="animation-delay: 0.8s;">
                <a href="#work" class="inline-flex items-center px-8 py-4 bg-white text-purple-600 font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
                    <i class="fas fa-briefcase mr-3"></i>
                    View My Work
                </a>
                <a href="#contact" class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-full hover:bg-white hover:text-purple-600 transition-all duration-300 hover:scale-105">
                    <i class="fas fa-envelope mr-3"></i>
                    Get In Touch
                </a>
            </div>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 fade-in" style="animation-delay: 1s;">
        <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-white/70 rounded-full mt-2 animate-bounce"></div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center slide-in-left">
                <div class="text-4xl font-bold text-purple-600 mb-2">2+</div>
                <div class="text-gray-600 font-medium">Years Backend Experience</div>
            </div>
            <div class="text-center fade-in">
                <div class="text-4xl font-bold text-purple-600 mb-2">5+</div>
                <div class="text-gray-600 font-medium">Years ML/Data Experience</div>
            </div>
            <div class="text-center slide-in-right">
                <div class="text-4xl font-bold text-purple-600 mb-2">100%</div>
                <div class="text-gray-600 font-medium">Fintech Impact</div>
            </div>
        </div>
    </div>
</section>
