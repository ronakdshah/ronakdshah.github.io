<!-- Education Section -->
<section class="py-20 bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="max-w-6xl mx-auto px-6">
        <!-- Header -->
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Education & Credentials</h2>
            <p class="text-gray-600 text-lg max-w-2xl mx-auto">Academic foundation that drives my technical expertise and problem-solving approach</p>
        </div>
        
        <!-- Education Cards -->
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            {% for degree in education.degrees %}
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100">
                <!-- Degree Icon -->
                <div class="w-16 h-16 gradient-bg rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg">
                    <i class="fas fa-graduation-cap text-white text-2xl"></i>
                </div>
                
                <!-- Degree Info -->
                <div class="text-center">
                    <h3 class="text-xl font-bold text-gray-900 mb-2">{{ degree.degree }}</h3>
                    <p class="text-purple-600 font-semibold text-lg mb-3">{{ degree.school }}</p>
                    
                    <!-- Duration & GPA -->
                    <div class="flex justify-center items-center space-x-6 mb-6">
                        <div class="text-center">
                            <p class="text-sm text-gray-500">Duration</p>
                            <p class="font-medium text-gray-900">{{ degree.start_date }} - {{ degree.end_date }}</p>
                        </div>
                        <div class="w-px h-8 bg-gray-300"></div>
                        <div class="text-center">
                            <p class="text-sm text-gray-500">GPA</p>
                            <p class="font-medium text-gray-900">{{ degree.gpa }}</p>
                        </div>
                    </div>
                    
                    <!-- Achievement Badge -->
                    {% if degree.gpa and "3.9" in degree.gpa or "4.0" in degree.gpa %}
                    <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-green-100 to-blue-100 rounded-full">
                        <i class="fas fa-star text-yellow-500 mr-2"></i>
                        <span class="text-sm font-medium text-gray-700">Academic Excellence</span>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
        
        <!-- Awards Section -->
        {% if awards %}
        <div class="mt-16">
            <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100">
                <div class="text-center mb-8">
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">{{ awards.name }}</h3>
                    <div class="w-16 h-1 gradient-bg rounded-full mx-auto"></div>
                </div>
                
                <div class="grid md:grid-cols-2 gap-6">
                    {% for achievement in awards.details %}
                    <div class="flex items-start space-x-4 p-4 bg-gradient-to-r from-purple-50 to-blue-50 rounded-xl">
                        <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-trophy text-white text-sm"></i>
                        </div>
                        <p class="text-gray-700 font-medium">{{ achievement }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</section>